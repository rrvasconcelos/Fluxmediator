<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Nullable>enable</Nullable>
    <PackageId>FluxMediator</PackageId>
    <Version>1.0.0</Version>
    <Authors>Rodrigo Vasconcelos</Authors>
    <Description>A lightweight mediator implementation for .NET applications, supporting commands, queries, and notifications</Description>
    <PackageTags>mediator;cqrs;commands;queries</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="9.0.4" />
  </ItemGroup>
</Project>
